{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Vac!t - Login
{% endblock %}

{% block body %}
	<style>
		.form {
			display: flex;
			flex-direction: column;
			gap: 1rem;
		}

		input {
			width: 100%;
		}
	</style>

	<div class="content">
		<h1>Login</h1>
		<p>Ben je geen kandidaat, maar een werkgever? Ga dan naar de
			<a href="/employer/login">loginpagina voor werkgevers</a>.
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form class="form" action="{{ path('app_login') }}" method="post">
				<div>
				<label for="username">E-mail</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="naam@provider.nl">
				</div>

				<div>
				<label for="password">Wachtwoord</label>
				<input
				type="password" id="password" name="_password" placeholder="****">
				</div>

				{# If you want to control the URL the user is redirected to on success
				            <input type="hidden" name="_target_path" value="/account"> #}

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div>
				<button type="submit">Inloggen</button>
				</div>
			</form>
		</p>
	</div>
{% endblock %}
